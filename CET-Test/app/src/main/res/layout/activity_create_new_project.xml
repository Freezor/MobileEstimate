<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oliverfries.cet_test.CreateNewProject">

    <EditText
        android:id="@+id/email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Project Name"
        android:inputType="textEmailAddress"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Estimation Method"
        android:id="@+id/estimationMethodTextView"
        android:layout_below="@+id/email_address"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="selectEstimationMethod"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Influencing Factors"
        android:id="@+id/influencingFactorsTextView"
        android:layout_below="@+id/estimationMethodTextView"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="selectInfluencingFactors"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Project Properties"
        android:id="@+id/projectPropertiesTextView"
        android:layout_below="@+id/influencingFactorsTextView"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="selectProjectProperties"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Add Notes"
        android:layout_below="@+id/projectPropertiesTextView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

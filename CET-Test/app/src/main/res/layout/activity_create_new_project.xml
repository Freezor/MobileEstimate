<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oliverfries.cet_test.CreateNewProject">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_name_icon"
        android:layout_alignLeft="@+id/project_name"
        android:layout_alignParentLeft="true"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
        android:layout_marginTop="40px"
        android:layout_marginBottom="30px"/>

    <EditText
        android:id="@+id/project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Project Name"
        android:inputType="textEmailAddress"
        android:layout_alignBottom="@+id/project_name_icon"
        android:layout_toEndOf="@+id/estimation_method_icon" />

    <View
        android:id="@+id/horizontal_line_1"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@+id/project_name"
        android:layout_marginTop="15dp"  />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estimation_method_icon"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
        android:layout_alignTop="@+id/estimationMethodTextView"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Estimation Method"
        android:id="@+id/estimationMethodTextView"
        android:clickable="true"
        android:onClick="selectEstimationMethod"
        android:layout_below="@+id/project_name_icon"
        android:layout_alignStart="@+id/project_name"
        android:layout_marginTop="15dp" />


    <View
        android:id="@+id/horizontal_line_2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@+id/estimationMethodTextView"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/influencing_factors_icon"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
        android:layout_alignTop="@+id/influencingFactorsTextView"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Influencing Factors"
        android:id="@+id/influencingFactorsTextView"
        android:clickable="true"
        android:onClick="selectInfluencingFactors"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/horizontal_line_2"
        android:layout_toEndOf="@+id/influencing_factors_icon" />

    <View
        android:id="@+id/horizontal_line_3"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@+id/influencingFactorsTextView"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_properties_icon"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
        android:layout_alignTop="@+id/projectPropertiesTextView"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Project Properties"
        android:id="@+id/projectPropertiesTextView"
        android:clickable="true"
        android:onClick="selectProjectProperties"
        android:layout_below="@+id/horizontal_line_3"
        android:layout_toEndOf="@+id/project_properties_icon"
        android:layout_marginTop="15dp" />

    <View
        android:id="@+id/horizontal_line_4"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@+id/projectPropertiesTextView"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notes_icon"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
        android:layout_alignBottom="@+id/project_note"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_note"
        android:hint="Add Notes"
        android:layout_below="@+id/horizontal_line_4"
        android:layout_alignStart="@+id/projectPropertiesTextView"
        android:layout_marginTop="15dp" />

</RelativeLayout>

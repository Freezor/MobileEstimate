<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oliverfries.cet_test" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Projects_Overview"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateNewProject"
            android:label="Create New Project"
            android:parentActivityName=".Projects_Overview" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oliverfries.cet_test.Projects_Overview" />
        </activity>
        <activity
            android:name=".InfluencingFactorsActivity"
            android:label="Influencing Factors"
            android:parentActivityName=".CreateNewProject" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oliverfries.cet_test.CreateNewProject" />
        </activity>
        <activity
            android:name=".FactorPickerActivity"
            android:label="Choose Value"
            android:parentActivityName=".InfluencingFactorsActivity"
            android:theme="@style/Theme.InfluencingPickerDialog" > <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oliverfries.cet_test.InfluencingFactorsActivity" />
        </activity>
        <activity android:name=".ProjectPropertiesActivity"
            android:label="Project Properties"
            android:parentActivityName=".CreateNewProject" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oliverfries.cet_test.CreateNewProject" />
        </activity>
    </application>

</manifest>

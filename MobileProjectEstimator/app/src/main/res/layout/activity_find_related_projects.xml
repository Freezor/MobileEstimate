<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobileprojectestimator.mobileprojectestimator.Activities.FindRelatedProjectsActivity">

    <ImageView
        android:id="@+id/ivProjectImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/project"/>

    <TextView
        android:id="@+id/tvProjectTitle"
        android:layout_width="230dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvEstimationMethod"
        android:layout_width="230dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProjectTitle"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/dark_blue"/>

    <View
        android:id="@+id/vDivider"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProjectImage"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/dark_orange"/>

    <TextView
        android:id="@+id/tvRelatedProjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vDivider"
        android:layout_centerHorizontal="true"
        android:text="@string/related_projects"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/dark_blue"/>

    <ListView
        android:id="@+id/lvEstimationItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvRelatedProjects"
        android:layout_marginTop="5dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_orange"/>
</RelativeLayout>

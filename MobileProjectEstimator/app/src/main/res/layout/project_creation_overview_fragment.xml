<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please Check all your input information."
        android:id="@+id/tvOverview"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvOverview"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:scrollbarFadeDuration="0">
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="2"
            android:orientation="horizontal"
            android:id="@+id/gridLayoutProjectItems"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:columnOrderPreserved="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Project Name: "
                android:id="@+id/tvProjectName"
                android:layout_marginTop="20dp" />

            <include android:id="@+id/projectNameValue" layout="@layout/project_overview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Project Description: "
                android:id="@+id/tvProjectDescription"
                android:layout_marginTop="20dp" />

            <include android:id="@+id/projectDescriptionValue" layout="@layout/project_overview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Project Icon: "
                android:id="@+id/tvProjectIcon"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/chosenProjectIconIV"
                android:src="@drawable/project"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Project Market: "
                android:id="@+id/tvProjectMarket"
                android:layout_marginTop="20dp" />

            <include android:id="@+id/projectMarketValue" layout="@layout/project_overview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Development Kind: "
                android:id="@+id/tvDevelopmentKind"
                android:layout_marginTop="20dp" />

            <include android:id="@+id/developmentKindValue" layout="@layout/project_overview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Process Model: "
                android:id="@+id/tvProcessModel"
                android:layout_marginTop="20dp" />

            <include android:id="@+id/processModelValue" layout="@layout/project_overview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Programming Language: "
                android:id="@+id/tvProgrammingLanguage"
                android:layout_marginTop="20dp" />

            <include android:id="@+id/programmingLanguageValue" layout="@layout/project_overview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Industry Sector: "
                android:id="@+id/tvIndustrySector"
                android:layout_marginTop="20dp" />

            <include android:id="@+id/industrySectorValue" layout="@layout/project_overview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Estimation Method: "
                android:id="@+id/tvEstimationMethod"
                android:layout_marginTop="20dp" />

            <include android:id="@+id/estimationMethodValue" layout="@layout/project_overview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Influencing Factor: "
                android:id="@+id/tvInfluencingFactor"
                android:layout_marginTop="20dp" />

            <include android:id="@+id/influencingFactorValue" layout="@layout/project_overview_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

        </GridLayout>
    </ScrollView>
    <include layout="@layout/dotted_progress_bar" android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tvInfluenceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text="@string/influence_factor_list_item_base_value"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/etInfluenceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="4"
        android:maxLines="1"
        android:drawableLeft="@drawable/ic_action_edit"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/infoImageView"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/infoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvInfluenceName"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_action_info"/>

</RelativeLayout>
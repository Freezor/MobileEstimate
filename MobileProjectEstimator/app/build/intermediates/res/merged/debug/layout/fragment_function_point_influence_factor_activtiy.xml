<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/lvInfluenceFactors"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sum of Influences: 0"
        android:id="@+id/tvSumOfInfluences"
        android:layout_below="@+id/lvInfluenceFactors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Factor Influence Rating: 0"
        android:id="@+id/tvFactorInfluenceRating"
        android:layout_below="@+id/tvSumOfInfluences"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Factor Set"
        android:id="@+id/bChangeFactorSet"
        android:layout_below="@+id/tvFactorInfluenceRating"
        android:layout_centerHorizontal="true"
        android:background="@color/standardButtonColor"
        android:layout_gravity="center_horizontal"
        android:theme="@style/Base.Widget.AppCompat.ActionButton"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
</RelativeLayout><!-- From: file:/D:/Workspace/Bachelorarbeit/MobileITProjectCostEstimation/MobileProjectEstimator/app/src/main/res/layout/fragment_function_point_influence_factor_activtiy.xml -->